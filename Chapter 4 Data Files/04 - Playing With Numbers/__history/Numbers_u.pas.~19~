unit Numbers_u;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ExtCtrls;

type
  TfrmNumbers = class(TForm)
    pnlInteger: TPanel;
    pnlReal: TPanel;
    btniMultiply: TButton;
    btniSquare: TButton;
    BtniSqrRt: TButton;
    btnrMultiply: TButton;
    btnrTrunc: TButton;
    btnrSquare: TButton;
    btnrqrRt: TButton;
    Panel3: TPanel;
    btnGetInteger: TButton;
    btnGetReal: TButton;
    btnRDivide: TButton;
    Panel1: TPanel;
    iMod: TButton;
    iDiv: TButton;
    Panel2: TPanel;
    Label1: TLabel;
    lblIntOut: TLabel;
    Label3: TLabel;
    lblRealOut: TLabel;
